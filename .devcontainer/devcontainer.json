{
  "name": "Rust",
  "image": "mikoto2000/tauri2:latest",
  "remoteEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
    "XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}"
  },
  "forwardPorts": [
    "0.0.0.0:6006:6006"
  ],
  "mounts": [
    {
      "type": "bind",
      "source": "/tmp/.X11-unix",
      "target": "/tmp/.X11-unix"
    },
    {
      "type": "bind",
      "source": "/mnt/wslg",
      "target": "/mnt/wslg"
    }
  ]
}
